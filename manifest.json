{
	"name": "guocai is a doubi",
	"version": "1.0",
	"manifest_version": 2,
	"description": "try to play guocai",
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "测试",
		"default_popup": "login.html",
		"scripts": ["js/addaccount.js", "js/store.js", "js/urs.js"]
	},
	"permissions": [
		"tabs",
		"http://weibo.com/",
		"http://simonproject.sinaapp.com/"
	],
	"background": {
		"scripts": ["js/jquery-2.0.0.min.js", "js/background.js"]
	},
	"content_scripts":[{
		"matches":["http://weibo.com/u/*/home?*", "http://weibo.com/mygroups?*"],
		"js":["js/jquery-2.0.0.min.js", "js/content_script.js"]
	},
		{
			"matches": ["http://simonproject.sinaapp.com/product.html*"],
			"js": ["js/jquery-2.0.0.min.js", "js/track.js"]
			}
	],
	"web_accessible_resources": [
		"weibo.html",
		"product.html"
	]
}